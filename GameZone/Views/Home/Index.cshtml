@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}
@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Games!</h4>
        <p class="mb-0"> No Games Were Added yet.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var game in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <!-- بطاقة اللعبة -->
                <a class="game-card-link text-decoration-none" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                    <!-- صورة الغلاف -->
                    <div class="game-card-image"
                         style="background-image: url(@($"{FileStettings.ImagesPath}/{game.Cover}"))" alt="@game.Name">
                        <!-- فئة اللعبة -->
                        <div class="game-card-category">
                            <span class="badge game-card-badge">
                                @game.category.Name
                            </span>
                        </div>
                    </div>
                    <!-- اسم اللعبة والأجهزة -->
                    <div class="game-card-details">
                        <h5 class="game-card-title">@game.Name</h5>
                        <div class="game-card-platform-icons">
                            @foreach (var gamedevice in game.Devices)
                            {
                                <i class="@gamedevice.Device.Icon"></i>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}





